<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"

    tools:context="com.example.barbaros.myapplication.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciadi">

        <Button
            android:id="@+id/button_sozluk"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_sozluk"
            android:onClick="Anasecim"
            android:text="Sözlük"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <Button
            android:id="@+id/button_yarisma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_yarisma"
            android:onClick="Anasecim"

            android:text="Yarışma"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="148dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="158dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciadi">

        <Button
            android:id="@+id/button_arklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_arklist"
            android:onClick="Answer"

            android:text="Arkadaş Listen"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="281dp" />

        <Button
            android:id="@+id/button_onlineSozluk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_arkekle"
            android:onClick="getOnline"


            android:text="Çevrimiçi Sözlük"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="281dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/kullaniciadi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hoşgeldin @KullanıcıAdı!"
        android:textColor="@color/btn_loginActivity"
        android:textSize="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="105dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/button_prof"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="308dp"
        android:background="@color/color_prof"
        android:gravity="center"
        android:onClick="logout"
        android:text="Çıkış Yap"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciadi" />


</android.support.constraint.ConstraintLayout>
